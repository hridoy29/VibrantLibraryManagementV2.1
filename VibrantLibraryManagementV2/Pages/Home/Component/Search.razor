@inject IJSRuntime JSRuntime
<div style="display: @(LoadingDelay ? "none" : "" );">
    <div class="search-library-catelog" style="display: @(ShowSearchSection ? "block" : "none")">
        <h3 class="search-library-catelog-text">Search Library Catalogue</h3>
        <div class="search-library-form">
            <ul class="nav nav-tabs scrollable-tabs" id="myTab" role="tablist" >
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="tab1-tab" data-bs-toggle="tab" data-bs-target="#tab1" type="button" role="tab" aria-controls="tab1" aria-selected="true">
                        Basic Search
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-bs-target="#tab2" type="button" role="tab" aria-controls="tab2" aria-selected="false">
                        Advanced Search
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tab3-tab" data-bs-toggle="tab" data-bs-target="#tab3" type="button" role="tab" aria-controls="tab3" aria-selected="false">
                        Browse
                    </button>
                </li>
            </ul>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                    <div class='wrapper-cs'>
                        <div id="input-container-custom">
                            <div class="search-input">
                                <div style="position: relative;">
                                    <input type="text" placeholder="Search" style="padding-left: 35px;" />
                                    <img src="/icons/search.png" class="search-icon" />
                                </div>
                            </div>

                            <div class="search-dropdown">
                                <SfDropDownList TValue="string" TItem="Games" Placeholder="Keyword" DataSource="@LocalData" CssClass="search-dropdown-item">
                                    <DropDownListFieldSettings Value="ID" Text="Text"></DropDownListFieldSettings>
                                </SfDropDownList>
                            </div>
                        </div>

                        <div class="button-container">
                            <SfButton CssClass="slc-search-button">Search</SfButton>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                </div>
                <div class="tab-pane fade" id="tab3" role="tabpanel" aria-labelledby="tab3-tab">
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool LoadingDelay { get; set; }
    [Parameter]
    public bool ShowSearchSection { get; set; }
    SfTextBox TextBoxEmailObj;

    public async Task AddIcons()
    {
        await this.TextBoxEmailObj.AddIconAsync("prepend", "e-icons");
    }

    public class Games
    {
        public string ID { get; set; }
        public string Text { get; set; }
    }

    List<Games> LocalData = new List<Games> {
    new Games() { ID= "Game1", Text= "American Football" },
    new Games() { ID= "Game2", Text= "Badminton" },
    new Games() { ID= "Game3", Text= "Basketball" }
  };
}
