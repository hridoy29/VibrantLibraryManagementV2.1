<div class="bookcard-left-right">
    <img class="book-image-left-right" src="@ImageUrl" alt="@AlternativeText">
    <div class="detail-container-ms pt-2">
        <h6 class="interest-alert-book-name">
            @BookName
        </h6>
        <p class="autor-interest-alert-left-right text-muted">by J.K Rowling</p>
        <p class="autor-interest-alert-left-right-link ">You rate this book</p>
        <div class="ratings-container">
            <div class="ratings">
                <img src="/icons/star.png" />
                <img src="/icons/star.png" />
                <img src="/icons/star.png" />
                <img src="/icons/star.png" />
                <img src="/icons/star.png" />
            </div>
            <span>&nbsp; 5/5</span>
        </div>
        <div class="mt-3">
            <img src=".././icons/share.png" class="icon" /> <span class="share-reading-history-card">Share</span>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string BookName { get; set; }
    [Parameter]
    public string ImageUrl { get; set; }
    [Parameter]
    public string AlternativeText { get; set; }
}

<style>
    .bookcard-left-right {
        width: 100%;
        height: 100%;
        display: flex;
        gap: 10px;
        background: white;
        /* padding: 10px; */
        flex-shrink: 0;
        border-radius: 10px;
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    }

    .book-image-left-right {
        width: 8rem;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
    }

    .autor-interest-alert-left-right {
        margin: 0px;
        padding-bottom: 5px;
        font-size: 12px;
    }

    .autor-interest-alert-left-right-link {
        margin: 0px;
        padding-bottom: 5px;
        font-size: 12px;
        text-decoration:underline
    }

    .ratings-container {
        display: flex;
        align-items: center;
        font-size: 12px;
    }

    .ratings img {
        width: 12px;
    }

</style>