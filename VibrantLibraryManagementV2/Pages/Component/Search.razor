<style>
    .search-library-catelog {
        width: 100%;
        /* margin: 30px 0px; */
        padding: 20px 100px;
        padding-bottom: 50px;
    }

    .search-library-form {
        width: 100%;
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        margin-top: 20px;
        box-shadow: rgba(17, 12, 46, 0.15) 0px 8px 10px 0px;
    }

    #input-container-custom {
        display: flex;
        flex-direction: row;
        gap: 20px;
        align-items: center;
    }

    .search-input {
        padding: 20px 0px;
        width: 60%;
    }

    .search-input input {
        border: 1px solid #f3f3f3;
        border-radius: 30px;
        padding: 10px;
        background: #d3d3d30a;
        width: 100%;
    }

    .search-dropdown {
        width: 40%;
        border: 1px solid #f3f3f3;
        border-radius: 30px;
        background: #d3d3d30a;
        padding: 5px 20px;
    }

    .email .e-input-group.e-control-wrapper .e-input-group-icon {
        content: "";
        background-size: contain !important;
        background-repeat: no-repeat !important;
        width: 16px !important;
        height: 16px !important;
        display: inline-block !important;
        margin-right: 15px;
        background: rgba(3, 5, 3, .5);
    }

    .search-icon {
        width: 20px;
        height: 20px;
        position: absolute;
        top: 11px;
        left: 10px;
    }

    .slc-search-button {
        background: #857e7e3d;
        padding: 8px 33px;
        border-radius: 20px;
        color: gray;
        box-sizing: border-box;
    }

    @@media only screen and (max-width: 760px) {
        .search-library-catelog {
            width: 100%;
            /* margin: 30px 0px; */
            padding: 20px 10px;
            padding-bottom: 50px;
        }

        .search-library-catelog-text{
            text-align: center;
        }
    }

    .search-dropdown-item, .search-dropdown-item:focus{
        border-bottom: none !important; /* Remove underline */
    }

    .e-input-group:not(.e-float-icon-left):not(.e-float-input)::before,
    .e-input-group.e-control-wrapper:not(.e-float-icon-left):not(.e-float-input)::before 
    {
        background: none !important;
    }

    .e-tab .e-tab-header .e-indicator {
        background: #089212;
    }

    .e-tab-text {
        color: black !important;
    }
        
 </style>

<div class="search-library-catelog">
    <h3 class="search-library-catelog-text">Search Library Catalogue</h3>
    <div class="search-library-form">
        <SfTab LoadOn="ContentLoad.Dynamic">
            <TabItems>
                <TabItem>
                    <HeaderTemplate>Basic Search</HeaderTemplate>
                    <ContentTemplate>
                        <div class='wrapper-cs'>

                            <div id="input-container-custom">

                                <div class="search-input">
                                    <div style="position: relative;">
                                        <input type="text"
                                               placeholder="Search" style="padding-left: 35px;" />
                                        <img src="/icons/search.png" class="search-icon" />
                                    </div>
                                </div>

                                <div class="search-dropdown">
                                    <SfDropDownList TValue="string"
                                                    TItem="Games"
                                                    Placeholder="Keyword"
                                                    DataSource="@LocalData"
                                                    CssClass="search-dropdown-item"
                                    >
                                        <DropDownListFieldSettings Value="ID"
                                                                   Text="Text" ></DropDownListFieldSettings>
                                    </SfDropDownList>
                                </div>

                            </div>

                            <div class="button-container">
                                <SfButton CssClass="slc-search-button">Search</SfButton>
                            </div>
                        </div>
                    </ContentTemplate>

                </TabItem>

                <TabItem>
                    <HeaderTemplate>Advanced Search</HeaderTemplate>
                    <ContentTemplate>

                    </ContentTemplate>
                </TabItem>

                <TabItem>
                    <HeaderTemplate>Browse</HeaderTemplate>
                    <ContentTemplate>

                    </ContentTemplate>
                </TabItem>
            </TabItems>
        </SfTab>
    </div>
</div>

