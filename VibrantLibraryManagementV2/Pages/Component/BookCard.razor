<div class="bookcard">
    <img class="book-image" src="@ImageUrl" alt="@AlternativeText">
    <div class="detail-container-ms">
        <h6 class="interest-alert-book-name">
            @BookName
        </h6>
        <p class="autor-interest-alert">by J.K Rowling</p>
        <div class="ratings-container">
            <div class="ratings">
                <img src="/icons/star.png" />
                <img src="/icons/star.png" />
                <img src="/icons/star.png" />
                <img src="/icons/star.png" />
                <img src="/icons/star.png" />
            </div>
            <span>&nbsp; 5/5</span>
        </div>
    </div>
</div>

@code{
    [Parameter]
    public string BookName { get; set; }
    [Parameter]
    public string ImageUrl { get; set; }
    [Parameter]
    public string AlternativeText { get; set; }
}

<style>
