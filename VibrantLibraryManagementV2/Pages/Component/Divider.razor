@inject IStringLocalizer<App> localizer

<div class="divider">
    <span>@localizer["OR"] </span>
</div>

<style>
    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 5px 0px;
    }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #ccc;
        }

        .divider:not(:empty)::before {
            margin-right: 10px;
        }

        .divider:not(:empty)::after {
            margin-left: 10px;
        }

        .divider span {
            font-size: 14px;
            color: #888;
        }
</style>